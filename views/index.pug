extends layout
block body
    div(class="row")
        div(class="column") 
            table(class="ui very basic compact fixed table")
                thead
                    tr
                        th(class="left aligned") Title
                        th(class="left aligned") Created
                        th(class="right aligned") 
                            a(href="/create")
                                button(class="ui positive icon button")
                                    i(class="plus icon")
                tbody
                    each item in list
                        tr
                            td= item.title
                            td= item.created
                            td(class="right aligned")
                                a(href="notes/" + item.id)
                                    button(class="ui primary icon button")
                                        i(class="eye icon")    
                                form(method="POST", action="notes/" + item.id + "/delete?_method=DELETE", class="delete-button")
                                    button(class="ui red icon button", type="submit")
                                        i(class="trash icon")
